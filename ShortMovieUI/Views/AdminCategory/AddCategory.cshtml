@model Category
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kategori Ekleme Sayfası</h4>

            <form class="forms-sample" asp-action="AddCategory" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label for="CategoryName">Kategori İsim</label>
                    <input type="text" name="CategoryName" class="form-control" id="CategoryName" placeholder="Kategori İsmi">
                </div>
                <div class="form-group">
                    <label for="CategoryImage">Kategori Resmi</label>
                    <input type="file" name="CategoryImage" class="form-control" id="CategoryImage">
                </div>

                <button type="submit" class="btn btn-primary mr-2">Gönder</button>
            </form>
        </div>
    </div>
</div>
