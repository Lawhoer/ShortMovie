
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="content-wrapper">

    <div class="row">
        <div class="col-xl-6 grid-margin stretch-card flex-column">
            <h5 class="mb-2 text-titlecase mb-4">İstatistikler <i class="fa-solid fa-chart-simple"></i></h5>
            <div class="row">
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <p class="mb-0 text-muted">Film Sayısı</p>
                                <i class="fa-solid fa-video fa-beat"></i>
                                
                            </div>
                            <h4>@ViewBag.moviecount</h4>
                            
                            <canvas id="transactions-chart" class="mt-auto" height="65"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 grid-margin stretch-card">
                    <div class="card">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <p class="mb-2 text-muted">Kategori Sayısı</p>
                                    <h4 class="mb-0">@ViewBag.categorycount</h4>
                                   
                                </div>
                                <i class="fa-solid fa-icons fa-xl fa-beat"></i>
                               
                            </div>
                            <canvas id="sales-chart-a" class="mt-auto" height="65"></canvas>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row h-100">
                <div class="col-md-6 stretch-card grid-margin grid-margin-md-0">
                    <div class="card">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <p class="text-muted">Yönetmen Sayısı</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h3 class="mb-">@ViewBag.directorcount</h3>
                                <i class="fa-solid fa-user fa-beat"></i>
                            </div>
                            <canvas id="sales-chart-b" class="mt-auto" height="38"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 stretch-card grid-margin grid-margin-md-0">
                    <div class="card">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <p class="text-muted">Yorum Sayısı</p>
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h3 class="mb-">@ViewBag.comment</h3>
                                <i class="fa-solid fa-comment fa-beat justify-content-end"></i>
                            </div>
                            <canvas id="cpu-chart" class="mt-auto"></canvas>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
        <div class="col-xl-6 grid-margin stretch-card flex-column">
            <h5 class="mb-2 text-titlecase mb-4">Site İstatistikler</h5>
            <div class="row h-100">
                <div class="col-md-12 stretch-card">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start flex-wrap">
                                <div>
                                    <p class="mb-3">Aylık Giriş</p>
                                    <h3>2583</h3>
                                </div>
                                <div id="income-chart-legend" class="d-flex flex-wrap mt-1 mt-md-0"></div>
                            </div>
                            <canvas id="income-chart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">

        @await Component.InvokeAsync("_AdminDashboardGrafik")

        <div class="col-md-6 col-xl-4 grid-margin stretch-card" style="gap:5px;">
            <div class="row">
                <div class="col-md-12 stretch-card">
                    <div class="card profile-card bg-gradient-primary">
                        <div class="card-body">
                            <div class="row align-items-center h-100">
                                <div class="col-md-4">
                                    <figure class="avatar mx-auto mb-4 mb-md-0">
                                        <img src="~/images/sirin.png" alt="avatar">
                                    </figure>
                                </div>
                                <div class="col-md-8">
                                    <h5 class="text-white text-center text-md-left">Yunus Emre Maral</h5>
                                    <p class="text-white text-center text-md-left">maralyunus41@gmail.com</p>
                                    <div class="d-flex align-items-center justify-content-between info pt-2">
                                        <div>
                                            <p class="text-white font-weight-bold">Yaş</p>
                                            <p class="text-white font-weight-bold">İl</p>
                                        </div>
                                        <div>
                                            <p class="text-white">
                                                @{
                                                    DateTime now = DateTime.Now;
                                                    DateTime targetDate = new DateTime(2001, 9, 19);
                                                    TimeSpan difference = now - targetDate;
                                                    double totalDays = difference.TotalDays;
                                                    double totalYears = Math.Floor(totalDays / 365.25);
                                                    

                                                }@totalYears
                                            <p>
                                            <p class="text-white">Kocaeli</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12 stretch-card">
                    <div class="card profile-card bg-gradient-primary">
                        <div class="card-body">
                            <div class="row align-items-center h-100">
                                <div class="col-md-4">
                                    <figure class="avatar mx-auto mb-4 mb-md-0">
                                        <img src="~/images/98128167.jpg" alt="avatar">
                                    </figure>
                                </div>
                                <div class="col-md-8">
                                    <h5 class="text-white text-center text-md-left">Eren Akıcı</h5>
                                    <p class="text-white text-center text-md-left">
                                        erenn2569@outlook.com.tr
                                    </p>
                                    <div class="d-flex align-items-center justify-content-between info pt-2">
                                        <div>
                                            <p class="text-white font-weight-bold">Yaş</p>
                                            <p class="text-white font-weight-bold">İl</p>
                                        </div>
                                        <div>
                                            <p class="text-white">
                                               @totalYears
                                            </p>
                                            <p class="text-white">Sakarya</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    </div>

    

    

</div>