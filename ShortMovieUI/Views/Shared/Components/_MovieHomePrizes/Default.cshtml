@model List<Movie>

<style>
	.mv-img-div {
		padding: 5px;
		height: 284px;
		width: auto;
	}

	.mv-img-div img {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.movie-items .movie-item {
		margin-right: 10px;
	}

	.tabs .tab {
		margin-left: -15px;
	}
</style>

<div id="tab2" class="tab">
	<div class="row">
		<div class="slick-multiItem">
			@foreach(var item in Model)
			{
				<div class="slide-it">
					<div class="movie-item">
						<div class="mv-img">
							<div class="mv-img-div">
								<img src="@item.MovieImage" alt="">
							</div>
						</div>
						<div class="hvr-inner">
							<a href="/MovieDetail/Movie/@item.MovieID"> İzle  <i class="fa-solid fa-eye"></i> </a>
						</div>
						<div class="title-in">
							<h6><a href="#">@item.MovieName</a></h6>
							<p><i class="fa-solid fa-trophy"></i><span>Ödüllüler</span></p>
						</div>
					</div>
				</div>
			}
			
			
		</div>
	</div>
</div>