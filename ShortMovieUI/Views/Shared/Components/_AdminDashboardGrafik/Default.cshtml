@model Dictionary<string, int>

<div class="col-xl-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body border-bottom">
            <div class="d-flex justify-content-between align-items-center flex-wrap">
                <h6 class="mb-2 mb-md-0 text-uppercase font-weight-medium">Kategori Grafik</h6>
            </div>
        </div>
        <div class="card-body">
            <canvas id="category-chart" class="mt-2"></canvas>
        </div>
    </div>
</div>


    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var categoryData = @Html.Raw(Json.Serialize(Model)); // Model verisini JavaScript nesnesine dönüştür
        var ctx = document.getElementById('category-chart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: Object.keys(categoryData), // Kategori isimleri
                datasets: [{
                    data: Object.values(categoryData), // Kategoriye ait film sayıları
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true
            }
        });
    </script>
