@model List<Movie>

	<style>

		.slider-img-div{
		padding: 5px;
		height: 437px;
		}
		.slider-img{
		width: 100%;
		height: 100%;
		object-fit: cover;
		}

	</style>

<div class="slick-multiItemSlider">
	@foreach(var item in Model)
	{
		<div class="movie-item ">
			<a href="/MovieDetail/Movie/@item.MovieID">
				<div class="mv-img">
			
					<div class="slider-img-div">
					     <img class="slider-img" src="@item.MovieImage" alt="">
				    </div>

				</div>
			</a>
			<div class="title-in">
				<div class="cate">
				</div>
				<h6><a href="#">@item.MovieName</a></h6>
				<p><i class="ion-android-star"></i><span>@item.Category.CategoryName</span> </p>
			</div>
		</div>
	}
</div>