@model List<Director>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yönetmen Listesi</h4>
         

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Yönetmen Resim
                            </th>
                            <th>
                                Yönetmen Adı Soyadı
                            </th>
                            <th>
                                Güncelle
                            </th>
                            <th>
                                Sil
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @item.DirectorID
                                </td>
                                <td class="py-1">
                                    <img src="@item.DirectorImage" alt="image" style="width: 50px; height: 50px;" />
                                </td>
                                <td>
                                    @item.DirectorNameSurname
                                </td>
                                <td>
                                    <a class="btn btn-outline-warning" href="/AdminDirector/UpdateDirector/@item.DirectorID"><i class="fa-solid fa-pen-to-square"></i>&nbsp Güncelle</a>
                                </td>
                                <td>
                                    <a class="btn btn-outline-danger" href="/AdminDirector/DeleteDirector/@item.DirectorID"><i class="fa-solid fa-trash"></i>&nbsp Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <a href="/AdminDirector/AddDirector/" class="btn btn-outline-primary btn-block">Yeni Yönetmen Ekle</a>
        </div>
    </div>
</div>
